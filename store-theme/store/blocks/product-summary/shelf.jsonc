{
  "slider-layout#shelf": {
    "props": {
      "itemsPerPage": {
        "desktop": 4,
        "tablet": 3,
        "phone": 2
      },
      "infinite": true,
      "fullWidth": true,
      "blockClass": ["shelf-home", "shelf-pdp"]
    }
  },

  // PRATELEIRA DE PLP E SEARCH
  "product-summary.shelf": {
    "props": {
      "blockClass": "shelf-plp"
    },
    "children": [
      "add-to-list-btn#shelf",
      // "rich-text#btn-comprar-novo",
      // "scavone-product-image",
      "flex-layout.row#img-and-comprar",
      "product-summary-name",
      "scavone-product-price-condition-layout#shelf",
      "product-installments",
      "product-summary-sku-selector",
      "flex-layout.row#add-to-cart",
      "product-price-savings"
    ]
  },
  // "responsive-layout.desktop#scavone-product-price-condition-layout-shelf": {
  //   "children": ["scavone-product-price-condition-layout#shelf"],
  //   "props": {
  //     "blockClass": "scavone-product-price-condition-layout",
  //     "fullWidth": true
  //   }
  // },
