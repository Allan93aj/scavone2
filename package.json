{
  "name": "scavone",
  "private": true,
  "license": "ISC",
  "scripts": {
    "start": "concurrently \"cd store-components && yarn start\" \"cd store-theme && yarn start\" \"cd global-css && yarn start\"",
    "setup": "yarn && cd store-components && yarn && cd ../store-theme && yarn && cd ../global-css && yarn",
    "prepare": "husky install",
    "lint": "eslint --ext js,jsx,ts,tsx .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,scss}\"",
    "test": ":"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,jsonc,scss}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "concurrently": "^7.1.0",
    "insane": "^2.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.0.3",
    "@ljharb/tsconfig": "^0.3.2",
    "@types/insane": "^1.0.0",
    "@vtex/tsconfig": "^0.6.0",
    "eslint": "^8.23.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1"
  }
}
